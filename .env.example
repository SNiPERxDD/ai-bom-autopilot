# TiDB Configuration
TIDB_URL=your-tidb-url
DB_USER=your-db-username
DB_PASS=your-db-password
DB_NAME=your-db-name

# Embedding Configuration - Multi-Provider Support
# Choose your embedding provider: openai or gemini
# EMBED_PROVIDER=openai

# OpenAI Configuration (1536 dimensions by default)
# OPENAI_API_KEY=your-openai-api-key
# EMBEDDING_MODEL=text-embedding-3-small  # Optional: defaults to text-embedding-3-small
# EMBEDDING_DIM=1536

# Gemini Configuration (768 dimensions by default)
# To use Gemini instead, uncomment these lines and comment out OpenAI config above:
 EMBED_PROVIDER=gemini
 GEMINI_API_KEY=your-gemini-api-key
 EMBEDDING_MODEL=models/embedding-001  # Optional: defaults to models/embedding-001
 EMBEDDING_DIM=768

# IMPORTANT: EMBEDDING_DIM must match your provider's output dimensions
# OpenAI text-embedding-3-small: 1536 dimensions
# OpenAI text-embedding-3-large: 3072 dimensions  
# Gemini models/embedding-001: 768 dimensions

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack-webhook
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=YOURPROJECT

# Application
DEBUG=true
LOG_LEVEL=INFO
DRY_RUN=false

# Runtime Tracing Configuration
RUNTIME_TRACING=true
RUNTIME_DURATION=30

# Hugging Face (for model/dataset card fetching)
HUGGINGFACE_TOKEN=your-huggingface-token
HF_CACHE_TTL_HOURS=24
